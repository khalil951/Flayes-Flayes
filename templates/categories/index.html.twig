

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4"><i class="fas fa-list-alt"></i> Categories</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th><i class="fas fa-tag"></i> Category Name</th>
                    <th><i class="fas fa-code-branch"></i> Subfield</th>
                    <th><i class="fas fa-hand-holding-usd"></i> Type of Funding</th>
                    <th><i class="fas fa-chart-line"></i> Profitability Index</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.categoryName }}</td>
                        <td>{{ category.subfield }}</td>
                        <td>{{ category.typeOfFunding }}</td>
                        <td>{{ category.profitabilityIndex }}</td>
                        <td>
                            <a href="{{ path('app_categories_show', {'id': category.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Show</a>
                            <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-end mt-4">
        <a href="{{ path('app_projects_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Projects List</a>
        <a href="{{ path('app_categories_new') }}" class="btn btn-success ml-2"><i class="fas fa-plus"></i> Create New Category</a>
    </div>
</div>

<!-- Font Awesome Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</body>
{% endblock %}
