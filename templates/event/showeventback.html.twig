

{% extends 'back.html.twig' %}

{% block title %}Event Management{% endblock %}

{% block body %}
<style>
    .operations .table-wrapper table {
        width: 100%;
        font-size: 0.8rem;
    }
    .operations .table-wrapper th, .operations .table-wrapper td {
        padding: 8px;
    }
    .operations .table-wrapper img {
        width: 30px;
        height: auto;
    }
    .custom-button {
        padding: 5px 10px;
        font-size: 0.75rem;
    }
</style>

<div class="operations">
    <h3 class="main-title">Operations</h3>
    
    <!-- Sorting Button -->
    <div>
        <a href="{{ path('app_sortdescevent') }}" class="custom-button btn btn-secondary">Sort Descending by Name</a>
    </div>

    <form class="operation-filter">
        <!-- Your filters here -->
    </form>
    
    <form id="searchForm" action="{{ path('app_searchevent') }}" method="get">
        <input type="text" name="query" id="query" placeholder="Search events..." oninput="performSearch()" autocomplete="off">
    </form>

    <div id="searchResults"></div>

    <!-- Assume events are loaded on the initial page load or via AJAX -->
    <div class="table-wrapper">
        <table class="transaction-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                <tr> 
                    <td>{{ event.getIdevent() }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.date }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.location }}</td>
                    <td>
                        {% if event.image %}
                            <img src="{{ asset(images_directory ~ '/' ~ event.image) }}" alt="Image for {{ event.name }}">
                        {% else %}
                            <p>No image available</p>
                        {% endif %}
                    </td>
                   
                    <td>
                        <a href="{{ path('event_Update', {'id': event.idevent}) }}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="{{ path('app_deleteevent', {'id': event.idevent}) }}" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                {% else %}
                    <td colspan="8">No events found.</td>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
