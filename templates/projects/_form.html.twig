{{ form_start(form) }}

<div class="row">
    <div class="col-md-6">
        <h3>Project Information</h3>
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.targetAudience) }}
        {{ form_row(form.category) }}
    </div>

    <div class="col-md-6">
        <h3>Project Details</h3>
        {{ form_row(form.demandInMarket) }}
        {{ form_row(form.developmentTimeline) }}
        {{ form_row(form.budgetFundingRequirements) }}
        {{ form_row(form.riskAnalysis) }}
        {{ form_row(form.marketStrategy) }}
        {{ form_row(form.exitStrategy) }}
        {{ form_row(form.teamBackground) }}
        {{ form_row(form.tags) }}
        {{ form_row(form.uniqueSellingPoints) }}
        {{ form_row(form.dailyPriceOfAssets) }}
        {{ form_row(form.investorsEquity) }}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Upload Image</h3>
        {{ form_row(form.image) }}
    </div>
</div>

<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
