<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        body {
            font-family: 'Arial', sans-serif;
        }

        .custom-btn {
            background-color: #007bff;
            color: white;
        }

        #image-preview {
            max-width: 100%;
            height: auto;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>

<body>

    <main role="main" class="container pt-5 pb-5">
        {% block body %}

        <div class="container">
            {{ form_start(form, {'method': 'POST'}) }}
            {{ form_widget(form._token) }}
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <h3><i class="fas fa-info-circle"></i> Project Information</h3>
                    <!-- Add Bootstrap classes here -->
                    {{ form_row(form.name, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Project Name'}}) }}
                    {{ form_row(form.description, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Description'}}) }}
                    {{ form_row(form.targetAudience, {'attr': {'class': 'form-select combobox mb-3'}}) }}
                    {{ form_row(form.category, {'attr': {'class': 'form-control mb-3'}}) }}
                </div>

                <div class="col-lg-6 mb-4">
                    <h3><i class="fas fa-tasks"></i> Project Details</h3>
                    <!-- Add Bootstrap classes here -->
                    <div class="hidden-fields">
                        {{ form_row(form.demandInMarket, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.developmentTimeline, {'attr': {'class': 'form-control datepicker mb-3'}}) }}
                        {{ form_row(form.budgetFundingRequirements, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.riskAnalysis, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.marketStrategy, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.exitStrategy, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.teamBackground, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.tags, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.uniqueSellingPoints, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.dailyPriceOfAssets, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.investorsEquity, {'attr': {'class': 'form-control mb-3'}}) }}
                    </div>
                    <button id="show-more-button1" class="btn custom-btn submit-btn1 mb-3">
                        Show More
                        <i class="fas fa-chevron-double-down"></i>
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h3><i class="fas fa-image"></i> Upload Image</h3>
                    <!-- Add Bootstrap classes here -->
                    <div class="input-group mb-3">
                        {{ form_row(form.image, {'attr': {'class': 'form-control', 'aria-describedby': 'inputGroupFileAddon01'}}) }}
                    </div>
                    <img id="image-preview" src="https://via.placeholder.com/300" alt="Preview Image" class="img-fluid mb-3">
                </div>
            </div>

            <button type="submit" class="btn custom-btn submit-btn mt-3">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
            {% endblock %}
    </main><!-- /.container -->
    <footer class="border-top footer text-muted">
        <!-- Footer information goes here -->
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybBud7l5eOAowJfajhczvt/8VEvNsS4Uog+gNQxa5VXLE4Dg/" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E nineWYWBficBUav" crossorigin="anonymous"></script>

    <script>
        $("#{{ form.image.vars.id }}").on("change", function () {
            let previewImage = $('#image-preview');
            if ($("#{{ form.image.vars.id }}")[0].files && $("#{{ form.image.vars.id }}")[0].files[0]) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    previewImage.attr('src', e.target.result).show();
                };
                reader.readAsDataURL($("#{{ form.image.vars.id }}")[0].files[0]);
            } else {
                previewImage.hide().attr('src', 'https://via.placeholder.com/300');
            }
        });

        $("#show-more-button1").on("click", function () {
            $(".hidden-fields").slideToggle();
        });
    </script>

    {% block javascripts %}{% endblock %}
</body>

</html>
