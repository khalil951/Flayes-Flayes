 {# templates/user/registration.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
        .section-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .cate {
            color: #007bff;
            font-weight: 500;
        }
        .title {
            font-size: 2rem;
            color: #333;
        }
        .total-thumb img {
            width: 100%;
            height: auto;
            border-radius: 5px;
        }
        .total-content {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
        }
        .tot-item {
            margin-bottom: 15px;
        }
        .tot-content {
            padding: 10px;
            border-left: 3px solid #007bff;
        }
        .counter-header h2 {
            font-size: 1.5rem;
            color: #333;
        }
        .footer-section {
    padding: 4rem 0;
}

.newslater-section .padding-bottom {
    padding-bottom: 20px;
}

.section-header.left-style {
    text-align: left;
}

.title-link {
    font-size: 1.25rem;
    font-weight: bold;
    text-decoration: none;
    color: #007bff; /* Example color */
}

.why-thumb img {
    width: 100%;
    height: auto;
    border-radius: 5px; /* Adjust as necessary */
}

.custom-button {
    background-color: #007bff; /* Example color */
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    display: inline-block;
}

    </style>
    

{% endblock %}
{% block title %}My Ticket Info{% endblock %}

{% block body %}
<!-- Begin Event Display Section -->
<section class="vh-250">
    <div class="container h-200">
        <!-- Back Arrow Link -->
        <div class="row">
            <div class="col-12">
                <a href="javascript:history.back()" class="btn btn-light mb-3">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
<div class="container">
    <section class="total-affiliate-section padding-bottom padding-top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form action="{{ path('view_tickets', {'eventId': event.idevent, 'userId': app.user.id}) }}" method="POST">
                        <div class="section-header text-center">
                            <span class="cate">Featured Event</span>
                            <h2 class="title">{{ event.name }}</h2>
                            <p>{{ event.description }}</p>
                        </div>
                        <div class="card shadow rounded">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ asset(images_directory ~ '/' ~ event.image) }}" alt="Event Image" class="img-fluid rounded-start">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <h3 class="title">Name</h3>
                                            <p>{{ event.name }}</p>
                                        </div>
                                        <div class="mb-3">
                                            <h3 class="title">Date</h3>
                                            <p>{{ event.date }}</p>
                                        </div>
                                        <div class="mb-3">
                                            <h3 class="title">Location</h3>
                                            <p>{{ event.location }}</p>
                                        </div>
                                        <div class="mb-4">
                                            <h3 class="title">Description</h3>
                                            <p>{{ event.description }}</p>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary custom-button">Register for Event</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>





<div class="container">
        <div class="row">
            <!-- Ticket Management Section with Image -->
            <div class="col-lg-6">
                <section class="why-affiliate-section">
                    <div class="section-header left-style">
                        <span class="cate">Get Access to Your Tickets</span>
                        <h2 class="title">Your Tickets</h2>
                        <p>Check your registration for the events and print your tickets</p>
                    </div>
                    <div class="why-area">
                        <div class="why-item">
                            <div class="why-inner">
                                <div class="why-thumb">
                                    <img src="{{ asset(images_directory ~ '/why4.png') }}" alt="Manage Tickets">
                                </div>
                                <div class="why-content">
                                    <a href="{{ path('view_tickets', {'userId':app.user.id}) }}" class="title-link">
                                        Print my tickets
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="why-item">
                            <div class="why-inner">
                                <div class="why-thumb">
                                    <img src="{{ asset(images_directory ~ '/why2.png') }}" alt="Manage Tickets">
                                </div>
                                <div class="why-content">
                                    <a href="{{ path('app_ticketdeleteshow', {'userId': app.user.id}) }}" class="title-link">
                                        Delete one of my tickets
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            
            <!-- Additional Image Section -->
            <div class="col-lg-6">
                                    <img src="{{ asset(images_directory ~ '/ticket.gif') }}" alt="Manage Tickets">
            </div>
        </div>

</div>

    
{% endblock %}