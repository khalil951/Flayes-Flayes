
<form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.idRec}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.idRec) }}">
    <input type="hidden" name="front" value="1">
    <button type="submit" class="btn btn-primary btn-sm" style="text-align: center;">
    <i class="fas fa-trash-alt"></i> <!-- Assuming you're using Font Awesome -->
</button>
</form>


